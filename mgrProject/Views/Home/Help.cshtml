
@{
    ViewData["Title"] = "Help";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Help</h1>

<div class="row chart">
    <div class="col-sm-10">
        <canvas id="myChart" width="400" height="200"></canvas>
    </div>
    <div class="col-sm-2">
        <label id="mysql">MySQL: 10005 ms</label> <br />
         <label id="neo4j">Neo4j: 2992 ms</label>

    </div>
</div>

@section scripts{
    <script>

        const labels = [
            'MySQL',
            'Neo4j'
        ];

        const data = {
            labels: labels,
            datasets: [{
                label: 'time in ms',
                backgroundColor: ['rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)'],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                ],
                data: [10005, 2992],
            }]
        };

        const config = {
            type: 'bar',
            data: data,
            options: {}
        };

        const myChart = new Chart(
            document.getElementById('myChart'),
            config
        );

    </script>
}